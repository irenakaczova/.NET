@model InstagramWebApp.Models.Post

<h2>Create a New Post</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Text">Post Text:</label>
        <textarea asp-for="Text" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Tags">Tags (comma-separated):</label>
        <input asp-for="Tags" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImgPath">Upload Image:</label>
        <input asp-for="ImgPath" type="file" class="form-control" />
    </div>

    @if (User.Identity != null)
    {
        <input type="hidden" asp-for="UserId" value="@User.Identity.Name" />
    }

    <button type="submit" class="btn btn-primary">Create Post</button>
</form>
